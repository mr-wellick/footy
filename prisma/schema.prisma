generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model countries {
  country_id   String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  country_code String @unique @db.VarChar(3)
  country_name String @unique @db.VarChar(100)
}

model leagues {
  league_id   String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  league_name String @db.VarChar(100)
  country_id  String @db.Uuid
}

model player_statistics {
  player_statistic_id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  saves               Int?
  goals_against       Int?
  goals               Int?
  assists             Int?
  shots               Int?
  shots_on_target     Int?
  fouls_committed     Int?
  fouls_against       Int?
  yellow_cards        Int?
  red_cards           Int?
  substitutions       Int?
  appearances         Int?
  player              String @db.Uuid
  team_id             String @db.Uuid
  season_id           String @db.Uuid
}

model players {
  player_id          String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  player_name        String  @db.VarChar(100)
  player_nationality String  @db.VarChar(50)
  player_position    String  @db.VarChar(5)
  player_height_cm   Int
  player_weight_kg   Decimal @db.Decimal(5, 2)
}

/// This table contains check constraints and requires additional setup for migrations. Visit https://pris.ly/d/check-constraints for more info.
model seasons {
  season_id  String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  start_year Int
  end_year   Int
}

model teams {
  team_id        String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  team_name      String @db.VarChar(100)
  team_league_id String @db.Uuid
}
